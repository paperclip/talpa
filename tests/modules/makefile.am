CHECKMODULESRC =

# Beware a hack to make 'make dist' everything work
src/platforms/linux/glue.c: link-sources

# Beware a hack to make 'make check' everything work
src/components/services/linux_personality_impl/linux_personality.c: link-sources

link-sources:
	@if test ! -L src; then \
		rm -f src; \
		ln -s @abs_top_srcdir@/src src; \
	fi; \
	if test ! -L include; then \
		rm -f include; \
		ln -s @abs_top_srcdir@/include include; \
	fi

EXTRA_DIST = tlp-test.h Makefile

if KBUILD26

if KBUILDUSEM
kbuildenv := M
else
kbuildenv := SUBDIRS
endif

CHECKMODULES := \
           tlp-personality.ko \
           tlp-fileinfo.ko \
           tlp-filesysteminfo.ko \
           tlp-syslog.ko \
           tlp-procfs.ko \
           tlp-stdinterceptor.ko \
